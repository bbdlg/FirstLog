<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradual_darkgreen"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_startlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:padding="25dp"
            android:text="@+string/guide_startlog"
            android:textColor="@color/orange"
            android:textSize="25sp" />
	    
        <Button
            android:id="@+id/button_showlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_startlog"
            android:layout_marginBottom="20dp"
            android:padding="25dp"
            android:text="@+string/guide_showlog"
            android:textColor="@color/orange"
            android:textSize="25sp" />

    </RelativeLayout>


</RelativeLayout>